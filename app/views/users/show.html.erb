<h2><%= current_user.email %></h2>

<% if current_user.spaces.any? %>
  <div class="row">

    <div class="col-sm-2"></div>

    <div class="col-sm-10">
      <h3><span class="text-primary">Listings</span></h3>
      <ul class="list-group">
        <% current_user.spaces.each do |space| %>
          <%= link_to space_path(space) do%>
            <li class="list-group-item">
              <div class="row">
                <div class="col-sm-10">
                  <h4><%= space.address %></h4>
                </div>
                <div class="col-sm-2">
                  <% if space.photos.first %>
                    <%= image_tag space.photos.first.image.url(:thumb), class: "img-responsive img-rounded" %>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
    <%= link_to "Add listing", new_space_path, class: "btn btn-default pull-right"%>
  </div>
<% else %>
    <%= link_to "Add listing", new_space_path, class: "btn btn-default pull-right"%>
<% end %>

<% if current_user.bookings.any? %>
  <div class="row">

    <div class="col-sm-2"></div>

    <div class="col-sm-10">
      <h3><span class="text-primary">Bookings</span></h3>
      <ul class="list-group">
        <% current_user.bookings.each do |booking| %>
          <li class="list-group-item">
            <div class="row">
              <div class="col-sm-10">
                <h4><%= booking.space.address %></h4>
              </div>
              <div class="col-sm-2">
                <% if booking.space.photos.first %>
                  <%= image_tag booking.space.photos.first.image.url(:thumb), class: "img-responsive img-rounded" %>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
