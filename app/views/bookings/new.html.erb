<div class="row">

  <div class="col-sm-3"></div>

  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-body">
        <% if current_user %>
          <h3>Reserve <%= @space.address %></h3>
          <div class="col-sm-5">
            <%= bootstrap_form_for [@space,@booking] do |f| %>
              <%= f.date_field :start_date %>
              <%= f.date_field :end_date %>
              <%= f.submit "Reserve", class: "btn btn-warning" %>
            <% end %>
          </div>
          <div class="col-sm-2"></div>
          <div class="col-sm-5">
            <% if @space.photos.any? %>
              <%= image_tag @space.photos.first.image.url(:thumb), class: "img-booking" %>
            <% end %>
          </div>
        <% else %>
          <h3>
            <%= link_to "Create A SleepOver Account to Make A Reservation", new_user_registration_path, class: "text-warning" %>
          </h3>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-sm-3"></div>

</div>
